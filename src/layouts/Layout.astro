---
import Footer from '@/components/Footer.astro'
import Header from '@/components/Header.astro'
import BasicLayout, { type PageSEO } from '@/layouts/BasicLayout.astro'

interface Props {
    navbarListen?: boolean
    pageSEO?: PageSEO
}

const { navbarListen = true, pageSEO } = Astro.props
---

<BasicLayout pageSEO={pageSEO}>
    <Header navbarListen={navbarListen} />
    <main>
        <slot />
    </main>
    <Footer />
</BasicLayout>

<style>
    main {
        @apply md:-mt-12 px-4 overflow-hidden;
    }
</style>
